
@{
    ViewBag.Title = "View";
}

<h2>@ViewBag.Title</h2>

<p>If you have still not recieved an email confirmation message within 10 minutes of registering, or if you accidentally deleted the message, then click this button and we'll send you another one</p>

@using (Html.BeginForm("RegenerateEmailConfirmation", "Account", FormMethod.Post, new {@class = "form-horizontal"}))
{
	@Html.Hidden("Email",(string)ViewBag.Email)
	<input type="submit" value="Re-Send Email Confirmation" class="btn btn-primary"/>
}

